<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="UseBehaviors.Views.NumericValidationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UseBehaviors.Behaviors"
    Title=".NET MAUI behavior demo">
    <StackLayout Padding="10,50,10,0">
        <Label FontSize="12" Text="Red when the number isn't valid" />
        <Entry Placeholder="Enter a System.Double">
            <Entry.Behaviors>
                <local:NumericValidationBehavior />
            </Entry.Behaviors>
        </Entry>
    </StackLayout>
</ContentPage>