<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UseAnimations">
    <FontImageSource
        x:Key="PlayIcon"
        FontFamily="FontAwesome"
        Glyph="{Static local:IconFont.Play}"
        Size="18"
        Color="White" />

    <FontImageSource
        x:Key="ResetIcon"
        FontFamily="FontAwesome"
        Glyph="{Static local:IconFont.Backward}"
        Size="18"
        Color="White" />

    <FontImageSource
        x:Key="LoopIcon"
        FontFamily="FontAwesome"
        Glyph="{Static local:IconFont.Redo}"
        Size="18"
        Color="White" />

    <FontImageSource
        x:Key="PauseIcon"
        FontFamily="FontAwesome"
        Glyph="{Static local:IconFont.Pause}"
        Size="18"
        Color="White" />

</ResourceDictionary>