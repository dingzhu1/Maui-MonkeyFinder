<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="UseAnimations.Pages.CustomAnimationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CustomAnimationPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Image
                x:Name="BotImg"
                HeightRequest="200"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                Source="dotnet_bot.png" />
            <Button
                Clicked="OnClikedAsync"
                HorizontalOptions="Center"
                SemanticProperties.Description="Fades out the dot net bot"
                Text="Change The Mood" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>